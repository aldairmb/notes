<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1>Admin Dashboard</h1>

    <h2>Manage Users</h2>

    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td>
                        <form action="/admin/edit/<%= user.id %>" method="POST">
                            <select name="role">
                                <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
                                <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                            </select>
                            <button type="submit">Change</button>
                        </form>
                    </td>
                    <td>
                        <form action="/admin/delete/<%= user.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                            <button type="submit">Delete</button>
                        </form>
                        <a href="/admin/user/<%= user.id %>/notes">View Notes</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h2>Contact Messages</h2>

    <% if (messages && messages.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Submitted</th>
                </tr>
            </thead>
            <tbody>
                <% messages.forEach(msg => { %>
                    <tr>
                        <td><%= msg.name %></td>
                        <td><%= msg.email %></td>
                        <td><%= msg.message %></td>
                        <td><%= new Date(msg.created_at).toLocaleString() %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No contact messages submitted yet.</p>
    <% } %>

</body>
</html>
